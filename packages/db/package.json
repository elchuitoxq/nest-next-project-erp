{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:reset": "tsx reset.ts",
    "db:seed": "tsx seed.ts",
    "db:setup": "npx tsx reset.ts && npx drizzle-kit push && npx tsx seed.ts"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.39.1",
    "postgres": "^3.4.5",
    "uuidv7": "^1.0.2"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/bcrypt": "^6.0.0",
    "drizzle-kit": "^0.31.8",
    "tsup": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "5.7.3"
  }
}
